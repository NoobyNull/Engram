{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume",
        "hooks": [
          {
            "type": "command",
            "command": "node \"/data/Claude_Scholar/dist/src/hooks/adapters/hook-runner.js\" SessionStart"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"/data/Claude_Scholar/dist/src/hooks/adapters/hook-runner.js\" UserPromptSubmit"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Read|Edit|Write|Bash|Grep|Glob|WebFetch|WebSearch",
        "hooks": [
          {
            "type": "command",
            "command": "node \"/data/Claude_Scholar/dist/src/hooks/adapters/hook-runner.js\" PostToolUse"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node \"/data/Claude_Scholar/dist/src/hooks/adapters/hook-runner.js\" PreToolUse"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"/data/Claude_Scholar/dist/src/hooks/adapters/hook-runner.js\" PreCompact"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"/data/Claude_Scholar/dist/src/hooks/adapters/hook-runner.js\" SessionEnd"
          }
        ]
      }
    ]
  }
}
